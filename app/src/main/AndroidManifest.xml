<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mta.vengage.leisuretime">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name=".MovieActivity"
            android:label="@string/title_activity_movie"
            android:parentActivityName=".Main"
            android:theme="@style/MovieActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mta.vengage.leisuretime.Main" />
        </activity>

        <activity
            android:name=".DetailActivity"
            android:label="@string/todays_weather"
            android:parentActivityName=".Main"
            android:theme="@style/DetailTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mta.vengage.leisuretime.Main" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".DetailActivity"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mta.vengage.leisuretime.DetailActivity" />
        </activity>

        <provider
            android:name=".data.WeatherProvider"
            android:authorities="com.mta.vengage.leisuretime.app"
            android:exported="false"
            android:syncable="false" />
        <provider
            android:name=".data.CinemaProvider"
            android:authorities="com.mta.vengage.leisuretime.app.cs"
            android:exported="false"
            android:syncable="false" />

        <activity
            android:name=".MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".MovieActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mta.vengage.leisuretime.MovieActivity" />
        </activity>

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
